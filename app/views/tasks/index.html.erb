<h1>タスクの一覧ページ</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>優先度</th>
      </tr>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
<% end %>

<%= paginate @tasks %>
<div class= "text-left">
 <%= link_to '新規タスク作成', new_task_path, class: 'btn btn-primary' %> 
</div>
